{
  "compilerOptions": {
    "outDir": "./lib",
    "skipLibCheck": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"]
  },

  "exclude": ["node_modules", "lib", "**/*.spec.ts"]
}
